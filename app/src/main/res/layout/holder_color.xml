<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="UselessParent">

    <LinearLayout
        android:layout_width="@dimen/clock_radius"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:padding="4dp">

        <TextView
            android:id="@android:id/title"
            style="@style/MyTheme.Configuration.Title" />

        <View style="@style/MyTheme.Configuration.Separator" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <!-- make this component has the same size with switch -->
            <Switch
                style="@style/MyTheme.Configuration.Switch"
                android:visibility="invisible" />

            <ImageView
                android:id="@android:id/icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:src="@drawable/color_oval_white" />

        </FrameLayout>

    </LinearLayout>
</FrameLayout>


